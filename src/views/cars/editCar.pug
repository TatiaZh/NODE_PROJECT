include ../includes/header.pug
body
    div(class="wrapper")
        div(class="titles")
            h1 Edit Car
        form(action="", method="post", class="form")
            label(class="label") Brand:
                input(type="text", name="brand", placeholder="Brand", value=`${car.brand}`,class="input")
            label(class="label") Model:
                input(type="text", name="model", placeholder="Model", value=`${car.model}`,class="input")
            label(class="label") VIN: *
                input(type="text", name="VIN", placeholder="VIN", value=`${car.VIN}`, required,class="input")
            label(class="label") Number: *
                input(type="text", name="number", placeholder="Number", value=`${car.number}`, required,class="input") 
                //- only number regex
            label(class="label") Color:
                input(type="text" name="color" placeholder="Color", value=`${car.color}`,class="input")
            label(class="label") Production Year:
                input(type="text" name="year" placeholder="Production Year", value=`${car.year}`,class="input")
            label(class="label") Owner:
                select(name="owner",required,class="input")
                    each user in usersDB
                        if user.enabled
                            option(value=`${user.fName} ${user.lName}`) #{user.fName} #{user.lName}
            
            button(type="submit", class="bttn-link frm-bttn-link") Save Changes

        include ../includes/footer.pug
